<div class="aw-container-wrap" ng-app="createApp" ng-controller="controller">
    <div class="container aw-publish">
        <div class="row">
            <div class="aw-content-wrap clearfix">
                <div class="col-sm-12 col-md-9 aw-main-content">
                    <ul class="nav nav-tabs aw-nav-tabs active">
                        <h2 class="hidden-xs">
                            <i class="fa fa-credit-card"></i>
                            发起
                        </h2>
                    </ul>
                    <!--问题的主题-->
                    <form name="createForm"  ng-submit="postForm()">
                        <div class="aw-mod aw-mod-publish">
                            <div class="mod-body">
                                <h3>问题的分类</h3>
                                <div class="aw-publish-title">
                                    <div>
                                        <select name="category" ng-model="formData.category"  style="width:50%" class="form-control">
                                            <% category.forEach(function(category,index){ %>
                                            <option value="<%= category[0]%>"><%= category[1] %></option>
                                            <% }) %>
                                        </select>
                                        <div style="height: 20px">
                                            <span  class="text-danger" ng-cloak ng-show="createForm.category.$invalid && !createForm.category.$pristine">
                                            <i class="glyphicon glyphicon-info-sign"></i>请正确选择版块
                                        </span>
                                        </div>
                                    </div>
                                </div>
                                <h3>问题的标题</h3>
                                <div class="aw-publish-title">
                                    <div>
                                        <input ng-maxlength="50" ng-minlength="10" ng-model="formData.title" type="text" name="title" placeholder="问题标题..." class="form-control" required>
                                        <div style="height:20px">

                                            <span  class="text-danger" ng-cloak="" ng-show="createForm.title.$invalid &&!createForm.title.$pristine">
                                                <i class="glyphicon glyphicon-info-sign"></i>问题的长度不能小于10个字符或者大于50个字符
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <h3>问题补充:</h3>
                                <div class="aw-mod aw-editor-box">
                                    <div class="mod-head">
                                        <textarea placeholder="问题支持markdown格式,请注意标记代码" id="question"></textarea>
                                    </div>
                                    <div class="mod-body">
                                       <div style="height:20px">
                                           <span ng-show="!islegal" class="text-danger" id="question_detail_message">
                                               <i class="glyphicon glyphicon-info-sign"></i>
                                               输入的内容长度必须大于10个字符
                                           </span>
                                       </div>
                                    </div>
                                </div>
                            </div>
                            <div class="mod-footer clearfix">
                                <input ng-disabled="createForm.$invalid || !islegal" class="btn btn-large btn-success" type="submit" value="发布问题">
                            </div>
                            <div style="height:34px;margin-top:20px">
                                <div ng-cloak id="errorbox" ng-show="error" class="alert text-center alert-danger">
                                    {{error}}
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>