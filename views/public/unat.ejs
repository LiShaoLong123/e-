<div class="aw-item" message-id="<%= message._id %>">
    <p>
                     <span class="pull-right text-color-999">
                  <button ng-click="readOne(<%= index %>)"  class="btn btn-mini btn-primary">
                        确认已读
                           </button>
                       </span>
        <em class="pull-left">
            <a href="/user/<%= message.author_id.name %>" class="aw-user-name">
                <%= message.author_id.name %>
            </a>
            在问题
        </em>
        <% if(message.reply_id){%>
        <a href="/question/<%= message.question_id.id %>#<%= message.reply_id._id %>" class="aw-hide-txt">
            <%= message.question_id.title %>
        </a>@了我
        <%}else {%>
        <a href="/question/<%= message.question_id.id %>" class="aw-hide-txt">
            <%= message.question_id.title %>
        </a>@了我
        <%} %>
    </p>
</div>